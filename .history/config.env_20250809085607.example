# On-Premise Data Platform Configuration
# Copy this file to config.env and update with your specific values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password
MYSQL_USER=data_user
MYSQL_PASSWORD=your_secure_mysql_password
MYSQL_DATABASE=data_platform

# InfluxDB Configuration
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=your_secure_influxdb_password
INFLUXDB_ORG=data_platform
INFLUXDB_BUCKET=iot_data

# MinIO Object Storage Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password

# =============================================================================
# ETL & PROCESSING CONFIGURATION
# =============================================================================

# Windmill ETL Configuration
WINMILL_BASE_URL=http://localhost:8000
WINMILL_DATABASE_URL=postgresql://windmill:windmill@windmill-db:5432/windmill
WINMILL_RUST_LOG=info

# Apache Airflow Configuration (Alternative - Not in Use)
AIRFLOW_FERNET_KEY=your_fernet_key_here
AIRFLOW_EXECUTOR=CeleryExecutor
AIRFLOW_LOAD_EXAMPLES=false

# =============================================================================
# MONITORING & GOVERNANCE CONFIGURATION
# =============================================================================

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password
GRAFANA_ADMIN_USER=admin

# Prometheus Configuration
PROMETHEUS_RETENTION_DAYS=15
PROMETHEUS_STORAGE_PATH=/prometheus

# Open Metadata Configuration
OPENMETADATA_MYSQL_HOST=mysql
OPENMETADATA_MYSQL_USER=data_user
OPENMETADATA_MYSQL_PASSWORD=your_secure_mysql_password
OPENMETADATA_MYSQL_DATABASE=data_platform

# =============================================================================
# SECURITY & ACCESS CONFIGURATION
# =============================================================================

# Kong API Gateway Configuration
KONG_DATABASE=postgres
KONG_PG_HOST=kong-database
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong
KONG_PG_DATABASE=kong

# Azure AD Integration (for Microsoft Fabric)
AZURE_AD_TENANT_ID=your_azure_tenant_id
AZURE_AD_CLIENT_ID=your_azure_client_id
AZURE_AD_CLIENT_SECRET=your_azure_client_secret
AZURE_AD_REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# MICROSOFT FABRIC INTEGRATION
# =============================================================================

# On-Premises Data Gateway Configuration
GATEWAY_CLUSTER_NAME=your_gateway_cluster_name
GATEWAY_ADMIN_USERNAME=your_gateway_admin_username
GATEWAY_ADMIN_PASSWORD=your_gateway_admin_password

# Power BI Configuration
POWERBI_WORKSPACE_ID=your_powerbi_workspace_id
POWERBI_DATASET_ID=your_powerbi_dataset_id

# Data Refresh Configuration
DATA_REFRESH_SCHEDULE=0 2 * * *  # Daily at 2 AM
INCREMENTAL_REFRESH_DAYS=30

# =============================================================================
# NETWORK & CONNECTIVITY
# =============================================================================

# Internal Network Configuration
INTERNAL_NETWORK_CIDR=192.168.1.0/24
API_GATEWAY_PORT=8000
INTERNAL_API_PORT=8001

# External Access Configuration
EXTERNAL_DOMAIN=your-domain.com
SSL_CERT_PATH=/path/to/ssl/certificate
SSL_KEY_PATH=/path/to/ssl/private/key

# =============================================================================
# STORAGE & BACKUP CONFIGURATION
# =============================================================================

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup
BACKUP_SCHEDULE=0 1 * * *  # Daily at 1 AM

# Data Retention Configuration
DATA_RETENTION_DAYS=365
ARCHIVE_RETENTION_DAYS=2555  # 7 years

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Database Performance
MYSQL_MAX_CONNECTIONS=200
MYSQL_INNODB_BUFFER_POOL_SIZE=1G
MYSQL_QUERY_CACHE_SIZE=64M

# InfluxDB Performance
INFLUXDB_MAX_CONCURRENT_COMPACTIONS=2
INFLUXDB_COMPACT_FULL_WRITE_COLD_DURATION=1h

# MinIO Performance
MINIO_MAX_CONCURRENT_REQUESTS=100
MINIO_DISK_USAGE_QUOTA=80%

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

# Log Level Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false

# Log Retention
LOG_RETENTION_DAYS=90
LOG_STORAGE_PATH=/logs

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Mode
DEV_MODE=false
TEST_MODE=false

# Mock Data Configuration
MOCK_DATA_ENABLED=false
MOCK_DATA_SIZE=1000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Google Analytics Configuration
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
GOOGLE_TAG_MANAGER_ID=your_gtm_container_id

# Smartlook Configuration
SMARTLOOK_PROJECT_KEY=your_smartlook_project_key

# Web Scraping Configuration
WEB_SCRAPING_RATE_LIMIT=100
WEB_SCRAPING_DELAY=1

# =============================================================================
# IoT & EDGE COMPUTING
# =============================================================================

# IoT Device Configuration
IOT_DEVICE_LIMIT=1000
IOT_DATA_RETENTION_DAYS=90
IOT_BATCH_SIZE=100

# Edge Computing Configuration
EDGE_COMPUTING_ENABLED=true
EDGE_SYNC_INTERVAL=300  # 5 minutes

# =============================================================================
# NOTIFICATIONS & ALERTING
# =============================================================================

# Email Notifications
SMTP_SERVER=smtp.your-domain.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL=alerts@your-domain.com

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#data-platform-alerts

# =============================================================================
# COMPLIANCE & GOVERNANCE
# =============================================================================

# Data Privacy Configuration
GDPR_COMPLIANCE_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Security Compliance
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true
MFA_REQUIRED=true

# =============================================================================
# CUSTOM CONFIGURATIONS
# =============================================================================

# Custom Business Logic
BUSINESS_TIMEZONE=Asia/Bangkok
CURRENCY=THB
LANGUAGE=th

# Custom API Endpoints
CUSTOM_API_ENABLED=false
CUSTOM_API_RATE_LIMIT=1000

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================

# Environment Type
ENVIRONMENT=production  # development, staging, production
DEPLOYMENT_REGION=thailand

# Resource Limits
CPU_LIMIT=8
MEMORY_LIMIT=32G
STORAGE_LIMIT=500G

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Backup Strategy
BACKUP_STRATEGY=incremental  # full, incremental, differential
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# Disaster Recovery
DR_SITE_ENABLED=false
DR_SITE_LOCATION=secondary_datacenter
DR_RECOVERY_TIME_OBJECTIVE=4h
DR_RECOVERY_POINT_OBJECTIVE=1h
